<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"

    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="5dp">

    <android.support.v7.widget.CardView
        android:id="@+id/card_view_profile"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:clickable="true"
        android:foreground="?android:attr/selectableItemBackground"
        app:cardCornerRadius="3dp"
        app:cardElevation="8dp">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/profile_nickname"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:padding="5dp"
                android:text="Nickname"
                android:textColor="@color/dark"
                android:textSize="@dimen/textSize_title" />

            <LinearLayout
                android:id="@+id/profile_Info"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/profile_nickname"
                android:divider="@drawable/divider_horizontal"
                android:dividerPadding="12dp"
                android:gravity="center_vertical"
                android:orientation="horizontal"
                android:showDividers="middle">

                <RelativeLayout
                    android:id="@+id/rl_profile_watched"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:padding="10dp">

                    <TextView
                        android:id="@+id/profile_watched"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Watched" />
                </RelativeLayout>

                <RelativeLayout
                    android:id="@+id/rl_profile_streak"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:padding="10dp">

                    <TextView
                        android:id="@+id/profile_streak"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:paddingLeft="30dp"
                        android:paddingRight="30dp"
                        android:text="Streak" />
                </RelativeLayout>

                <RelativeLayout
                    android:id="@+id/rl_profile_recorded"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:padding="10dp">

                    <TextView
                        android:id="@+id/profile_recorded"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Recorded " />
                </RelativeLayout>

                <RelativeLayout
                    android:id="@+id/rl_profile_spent"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:padding="10dp">

                    <TextView
                        android:id="@+id/profile_spent"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Spent " />
                </RelativeLayout>

                <RelativeLayout
                    android:id="@+id/rl_profile_collected"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:padding="10dp">

                    <TextView
                        android:id="@+id/profile_collected"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Collected " />
                </RelativeLayout>

            </LinearLayout>

        </RelativeLayout>

    </android.support.v7.widget.CardView>

</LinearLayout>
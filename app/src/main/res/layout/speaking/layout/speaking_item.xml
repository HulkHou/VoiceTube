<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"

    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="5dp">

    <android.support.v7.widget.CardView
        android:id="@+id/card_view_speaking"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:clickable="true"
        android:foreground="?android:attr/selectableItemBackground"
        app:cardCornerRadius="3dp"
        app:cardElevation="8dp">

        <RelativeLayout
            android:id="@+id/rl_speaking"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <ImageView
                android:id="@+id/iv_speaking_pic"
                android:layout_width="96dp"
                android:layout_height="96dp"
                android:scaleType="centerCrop"
                app:srcCompat="@mipmap/news_one" />

            <TextView
                android:id="@+id/tv_speaking_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:layout_toRightOf="@id/iv_speaking_pic"
                android:text="This is a Title."
                android:textSize="@dimen/textSize_title" />

            <TextView
                android:id="@+id/tv_speaking_desc"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignLeft="@id/tv_speaking_title"
                android:layout_below="@id/tv_speaking_title"
                android:layout_marginTop="10dp"
                android:text="This is a desc.This is a desc.This is a desc.This is a desc.This is a desc.This is a desc."
                android:textSize="@dimen/textSize_small" />

            <TextView
                android:id="@+id/tv_speaking_author_1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/iv_speaking_pic"
                android:layout_marginBottom="10dp"
                android:layout_marginTop="10dp"
                android:text="Host:"
                android:textSize="@dimen/textSize_small" />

            <TextView
                android:id="@+id/tv_speaking_author"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignTop="@id/tv_speaking_author_1"
                android:layout_toRightOf="@id/tv_speaking_author_1"
                android:text="Sam smith"
                android:textSize="@dimen/textSize_small" />

            <TextView
                android:id="@+id/tv_speaking_posted_time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignTop="@id/tv_speaking_author"
                android:layout_marginLeft="120dp"
                android:layout_toRightOf="@id/tv_speaking_author"
                android:text="Aug 5,2017"
                android:textSize="@dimen/textSize_small" />

        </RelativeLayout>

    </android.support.v7.widget.CardView>

</LinearLayout>